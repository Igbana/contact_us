<ContactPage>:
    md_bg_color: [1,1,1,1]
    MDFloatLayout:
        MDLabel:
            text: "Contact Us"
            pos_hint: {'center_x': 0.5,'center_y': 0.8}
            halign: 'center'
            font_name: 'assets/fonts/Poppins/Poppins-SemiBold.ttf'
            font_size: '40sp'
            color: 1 , 0 , 1 , 1
        MDFloatLayout:
            size_hint: .9,None
            height: 45
            pos_hint: {'center_x': 0.5,'center_y': 0.685}
            canvas:
                Color:
                    rgba: [1, 1, 1, 1]
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [6]
            canvas.before:
                Color:
                    rgb: 230/255, 230/255, 230/255, 1
                Line:
                    width: 2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 6,6,6,6,100
            TextInput:
                id: name
                hint_text: 'Name'
                background_color: 0,0,0,0
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint_y: None
                height: self.minimum_height
                multiline: False
                font_name: 'assets/fonts/Poppins/Poppins-Regular.ttf'
                font_size: '18sp'
                hint_text_color: 170/255, 170/255, 170/255, 1
                padding: 10
                cursor_color: 1,0,1,1
        MDFloatLayout:
            size_hint: .9,None
            height: 45
            pos_hint: {'center_x': 0.5,'center_y': 0.565}
            canvas:
                Color:
                    rgba: [1, 1, 1, 1]
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [6]
            canvas.before:
                Color:
                    rgb: 230/255, 230/255, 230/255, 1
                Line:
                    width: 2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 6,6,6,6,100
            TextInput:
                id: email
                hint_text: 'Email'
                background_color: 0,0,0,0
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint_y: None
                height: self.minimum_height
                multiline: False
                font_name: 'assets/fonts/Poppins/Poppins-Regular.ttf'
                font_size: '18sp'
                hint_text_color: 170/255, 170/255, 170/255, 1
                padding: 10
                cursor_color: 1,0,1,1
        MDFloatLayout:
            size_hint: .9,None
            height: 160
            pos_hint: {'center_x': 0.5,'center_y': 0.345}
            canvas:
                Color:
                    rgba: [1, 1, 1, 1]
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [6]
            canvas.before:
                Color:
                    rgb: 230/255, 230/255, 230/255, 1
                Line:
                    width: 2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 6,6,6,6,100
            TextInput:
                id: message
                hint_text: 'Message'
                background_color: 0,0,0,0
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint_y: None
                height: 160
                font_name: 'assets/fonts/Poppins/Poppins-Regular.ttf'
                font_size: '18sp'
                hint_text_color: 170/255, 170/255, 170/255, 1
                padding: 10
                cursor_color: 1,0,1,1
        Button:
            text:'SUBMIT'
            size_hint: None, None
            size: 250,50
            pos_hint: {'center_x': 0.5,'y': 0.06}
            background_color: 0,0,0,0
            canvas.before:
                Color:
                    rgba: [1, 0, 1, 1]
                RoundedRectangle:
                    size: self.size[0], self.size[1]
                    pos: self.pos
                    radius: [6]
            on_release: if name.text != "" and email.text != "" and message.text != "": root.send_message(name, email, message)
            